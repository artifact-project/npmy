{
  "name": "npmy",
  "version": "0.4.1",
  "description": "`npm link` on steroids.",
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "repository": "git@github.com:artifact-project/npmy.git",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "npmy": "bin/npmy.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "git-clean": "git clean -f",
    "prepublish": "npm run test && npm run ts-build",
    "postpublish": "npm run git-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "bin/*.js",
    "bin/*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "@types/node": "^6.0.81",
    "cli-spinner": "^0.2.6",
    "debounce": "^1.0.2",
    "glob": "^7.1.2",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0",
    "node-watch": "^0.5.5",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0"
  }
}
