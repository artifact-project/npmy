{
  "name": "nmpy",
  "version": "0.1.0",
  "description": "nmpy â€” `npm link` on steroids.",
  "author": "RubaXa <trash@rubaxa.org>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "ts-clean": "git clean -f",
    "prepublish-only": "npm run test && npm run ts-build",
    "prepublish": "[ -f index.ts ] && (npm run prepublish-only) || echo 'SKIP'",
    "postpublish": "npm run ts-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "transformIgnorePatterns": [],
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
